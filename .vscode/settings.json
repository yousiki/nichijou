{
  "[nix]": {
    "editor.defaultFormatter": "jnoortheen.nix-ide",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "nix.enableLanguageServer": true,
  "nix.formatterPath": "nixfmt",
  "nix.serverPath": "nil",
  "nix.serverSettings": {
    "nil": {
      "flake": {
        "autoArchive": true,
        "autoEvalInputs": true,
        "nixpkgsInputName": "nixpkgs"
      },
      "formatting": {
        "command": ["nixfmt"]
      }
    },
    "nixd": {
      "formatting": {
        "command": ["nixfmt"]
      }
    }
  },
  "nixEnvSelector.useFlakes": true
}
